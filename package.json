{
  "name": "@tetravaal-kjs/nest-couchdb",
  "description": "CouchDB module for Nest framework",
  "version": "0.1.0",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "prebuild": "yarn build:clean",
    "build:clean": "cd dist && rm -rf `ls | grep -v \"LICENSE\\|package.json\\|README.md\"`",
    "build": "npx tsc -b tsconfig.build.json",
    "commit": "npx git-cz",
    "lint": "npx tslint 'src/*.ts'",
    "format": "npx pretty-quick --pattern 'src/**/*.ts'",
    "test": "npx jest -c=jest.config.js test/ --verbose --runInBand"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn format --staged && yarn lint",
      "commit-msg": "npx validate-commit-msg"
    }
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    },
    "validate-commit-msg": {
      "types": "conventional-commit-types",
      "helpMessage": "Use \"yarn commit\" instead"
    }
  },
  "dependencies": {
    "@nestjs/common": "8.0.6",
    "@nestjs/core": "8.0.6",
    "@nestjs/platform-express": "8.0.6",
    "@nestjs/testing": "8.0.6",
    "@types/jest": "27.0.2",
    "@types/node": "16.9.4",
    "@zmotivat0r/o0": "^1.0.2",
    "class-transformer": "^0.4.0",
    "commitizen": "4.2.4",
    "coveralls": "3.1.1",
    "cz-conventional-changelog": "3.3.0",
    "husky": "7.0.2",
    "jest": "27.2.1",
    "nano": "9.0.5",
    "prettier": "2.4.1",
    "pretty-quick": "3.1.1",
    "reflect-metadata": "0.1.13",
    "rxjs": "7.3.0",
    "ts-jest": "27.0.5",
    "ts-node": "10.2.1",
    "tslint": "5.20.1",
    "tslint-config-prettier": "1.18.0",
    "typescript": "4.4.3",
    "validate-commit-msg": "2.14.0"
  },
  "directories": {
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Kumpon-J-Sotsukpiam/nest-couchdb.git"
  },
  "author": "",
  "bugs": {
    "url": "https://github.com/Kumpon-J-Sotsukpiam/nest-couchdb/issues"
  },
  "homepage": "https://github.com/Kumpon-J-Sotsukpiam/nest-couchdb#readme",
  "devDependencies": {}
}