{
  "name": "@scalio/nest-couchdb",
  "description": "CouchDB module for Nest framework",
  "version": "0.0.0",
  "license": "MIT",
  "private": true,
  "scripts": {
    "prebuild": "yarn build:clean",
    "build:clean": "npx del './dist/*{.ts,.js,.map}'",
    "build": "npx tsc -b",
    "commit": "npx git-cz",
    "lint": "npx tslint 'src/*.ts'",
    "format": "npx pretty-quick --pattern 'src/**/*.ts'",
    "test": "echo \"OK\""
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn format --staged && yarn lint"
    }
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    },
    "validate-commit-msg": {
      "types": "conventional-commit-types",
      "helpMessage": "Use \"yarn commit\" instead"
    }
  },
  "dependencies": {
    "@types/jest": "24.0.15",
    "@types/node": "^12.6.2",
    "commitizen": "3.1.1",
    "coveralls": "^3.0.5",
    "cz-conventional-changelog": "2.1.0",
    "del-cli": "2.0.0",
    "husky": "3.0.0",
    "jest": "24.8.0",
    "prettier": "1.18.2",
    "pretty-quick": "1.11.1",
    "ts-jest": "24.0.2",
    "ts-node": "^8.3.0",
    "tslint": "5.18.0",
    "tslint-config-prettier": "1.18.0",
    "typescript": "^3.5.3",
    "validate-commit-msg": "2.14.0"
  }
}
